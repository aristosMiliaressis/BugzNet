@page
@model BugzNet.Web.Pages.Bugs.Index

<section>
    @for (int i = 0; i < @Model.Bugs.Count; i+=2)
    {
       <div class="columns">
            <div class="column is-multiline field">
                <img class="center" width="350" height="350" src="@Model.Bugs.ElementAt(i).Picture">
                <div style="text-align: center;">
                    <a asp-page="Details" asp-route-name="@Model.Bugs.ElementAt(i).Name">@Model.Bugs.ElementAt(i).Name</a>
                </div>
            </div>
            <div class="column is-multiline field">
                <img class="center" width="350" height="350" src="@Model.Bugs.ElementAt(i+1).Picture">
                <div style="text-align: center;">
                    <a asp-page="Details" asp-route-name="@Model.Bugs.ElementAt(i+1).Name">@Model.Bugs.ElementAt(i+1).Name</a>
                </div>
            </div>        
        </div>
    }
</section>